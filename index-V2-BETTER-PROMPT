    <script>
        $(document).ready(function() {
            let count = 0;
            $("#start").click(function() {
                $("#loader").show();
                function fetchPart() {
                    $.get("index.php?generate=1", function(data) {
                        let result = JSON.parse(data);
                        if (result.done) {
                            $("#loader").hide();
                            return;
                        }
                        $("#story").append("<p><strong>Page " + result.page + ":</strong> " + result.text + "</p>");
                        count++;
                        if (count < 200) {
                            setTimeout(fetchPart, 1000);
                        } else {
                            $("#loader").hide();
                        }
                    });
                }
                fetchPart();
            });
        });
    </script>
